<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText_style">

        <item name="android:gravity">center</item>
        <item name = "android:background">@drawable/edit_text_background</item>
        <item name="android:layout_width">258dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">Montserrat-Regular</item>
        <item name="android:ems">10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="button1_style">
        <item name="android:gravity">center</item>
        <item name = "android:background">@drawable/button1</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="button2_style">
        <item name="android:gravity">center</item>
        <item name = "android:background">@drawable/button2</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
